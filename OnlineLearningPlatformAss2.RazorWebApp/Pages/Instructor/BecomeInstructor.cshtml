@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Instructor.BecomeInstructorModel
@{
    ViewData["Title"] = "Become an Instructor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5 bg-primary d-flex align-items-center justify-content-center p-5 text-white">
                        <div class="text-center">
                            <i class="bi bi-mortarboard display-1 mb-4"></i>
                            <h2 class="fw-bold">Teach the World</h2>
                            <p class="opacity-75">Share your expertise and earn while you do it.</p>
                        </div>
                    </div>
                    <div class="col-md-7 p-5">
                        <h3 class="mb-4 fw-bold">Ready to start?</h3>
                        <p class="text-muted mb-5">
                            By becoming an instructor, you'll gain access to our Course Builder, 
                            analytics tools, and a global community of learners.
                        </p>

                        <div class="mb-5">
                            <div class="d-flex mb-4">
                                <div class="icon-box bg-light text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    <i class="bi bi-pencil-square h4 mb-0"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Create impactful courses</h6>
                                    <p class="small text-muted mb-0">Use our intuitive tools to build high-quality content.</p>
                                </div>
                            </div>
                            <div class="d-flex mb-4">
                                <div class="icon-box bg-light text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    <i class="bi bi-people h4 mb-0"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Reach millions</h6>
                                    <p class="small text-muted mb-0">Get discovered by learners from over 190 countries.</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="icon-box bg-light text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    <i class="bi bi-wallet2 h4 mb-0"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Earn revenue</h6>
                                    <p class="small text-muted mb-0">Get paid monthly via secure payment channels.</p>
                                </div>
                            </div>
                        </div>

                        <form method="post" asp-page-handler="Apply">
                            <div class="form-check mb-4">
                                <input class="form-check-box me-2" type="checkbox" id="termsCheck" required>
                                <label class="form-check-label small text-muted" for="termsCheck">
                                    I agree to the Instructor Terms of Service and Privacy Policy.
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill mb-3">
                                Start Teaching Today
                            </button>
                            <div class="text-center">
                                <a asp-page="/Index" class="text-muted small">Not now, take me back home</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
