@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Instructor.DashboardModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">Instructor Dashboard</h2>
            <p class="text-muted mb-0">Manage your courses and track your performance.</p>
        </div>
        <a asp-page="/Instructor/EditCourse" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i>Create New Course
        </a>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4 bg-primary text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="mb-1 opacity-75">Total Students</p>
                        <h2 class="fw-bold mb-0">@Model.TotalStudents.ToString("N0")</h2>
                    </div>
                    <i class="bi bi-people display-6 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="mb-1 text-muted">Course Rating</p>
                        <h2 class="fw-bold mb-0">@Model.AverageRating.ToString("F1") <small class="h6 text-warning"><i class="bi bi-star-fill"></i></small></h2>
                    </div>
                    <i class="bi bi-star display-6 text-warning opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4 bg-success text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="mb-1 opacity-75">Total Earnings</p>
                        <h2 class="fw-bold mb-0">@Model.TotalEarnings.ToString("C")</h2>
                    </div>
                    <i class="bi bi-currency-dollar display-6 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- My Courses -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">My Courses</h5>
                    <span class="badge bg-primary rounded-pill">@Model.MyCourses.Count Total</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Course</th>
                                <th>Students</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.MyCourses.Any())
                            {
                                @foreach (var course in Model.MyCourses)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="@(course.ImageUrl ?? "https://via.placeholder.com/120x68")" 
                                                     class="rounded me-3" style="width: 50px; height: 30px; object-fit: cover;">
                                                <div class="text-truncate" style="max-width: 150px;">
                                                    <div class="fw-bold small">@course.Title</div>
                                                    <div class="text-muted" style="font-size: 0.7rem;">@course.CategoryName</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@course.StudentCount</td>
                                        <td>
                                            @if (course.Status == "Pending") { <span class="badge bg-warning text-dark small">Pending</span> }
                                            else if (course.Status == "Rejected") { <span class="badge bg-danger small" title="@course.RejectionReason">Rejected</span> }
                                            else if (course.Status == "Suspended") { <span class="badge bg-dark small">Suspended</span> }
                                            else { <span class="badge bg-success bg-opacity-10 text-success small">Published</span> }
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-page="/Course/Details" asp-route-id="@course.Id" class="btn btn-sm btn-link p-0 me-2" title="View"><i class="bi bi-eye"></i></a>
                                                <a asp-page="/Instructor/EditCourse" asp-route-id="@course.Id" class="btn btn-sm btn-link p-0 text-primary" title="Edit"><i class="bi bi-pencil"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Notifications -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Recent Alerts</h5>
                    @if (Model.UnreadNotifications > 0)
                    {
                        <span class="badge bg-danger rounded-pill">@Model.UnreadNotifications New</span>
                    }
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (Model.Notifications.Any())
                        {
                            @foreach (var note in Model.Notifications)
                            {
                                <div class="list-group-item @(note.IsRead ? "opacity-75" : "bg-light border-start border-primary border-3") py-3">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <span class="badge @(note.Type == "Enrollment" ? "bg-success" : (note.Type == "Approval" ? "bg-info" : "bg-secondary")) small " style="font-size: 0.6rem;">@note.Type</span>
                                        <small class="text-muted" style="font-size: 0.65rem;">@note.CreatedAt.ToString("MMM dd HH:mm")</small>
                                    </div>
                                    <p class="mb-1 small fw-medium" style="font-size: 0.85rem;">@note.Message</p>
                                    @if (!note.IsRead)
                                    {
                                        <button onclick="markRead('@note.Id')" class="btn btn-sm btn-link p-0 text-decoration-none" style="font-size: 0.75rem;">Mark as read</button>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-bell-slash mb-2 display-6"></i>
                                <p class="small mb-0">No alerts yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
<script>
    async function markRead(id) {
        const response = await fetch(`?handler=MarkAsRead&id=${id}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
        });
        if (response.ok) location.reload();
    }
</script>
}
