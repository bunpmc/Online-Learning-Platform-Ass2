@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.User.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 text-center p-4">
                <div class="mb-3">
                    <img src="@(Model.UserProfile?.AvatarUrl ?? "https://ui-avatars.com/api/?name=" + Model.UserProfile?.Username + "&background=random&size=128")" 
                         alt="Profile" class="rounded-circle shadow-sm" style="width: 128px; height: 128px; object-fit: cover;">
                </div>
                <h3 class="mb-1">@Model.UserProfile?.Username</h3>
                <p class="text-muted mb-3">@Model.UserProfile?.Email</p>
                <div class="badge bg-primary mb-3">@Model.UserProfile?.Role</div>
                <hr>
                <div class="text-start">
                    <p class="mb-2"><i class="bi bi-calendar-event me-2"></i> Joined @Model.UserProfile?.CreatedAt.ToString("MMMM yyyy")</p>
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-4 p-4">
                <h5 class="mb-3">Learning Stats</h5>
                <div class="d-flex justify-content-between mb-2">
                    <span>Enrolled Courses</span>
                    <span class="fw-bold">@Model.UserProfile?.EnrolledCoursesCount</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Completed</span>
                    <span class="fw-bold">@Model.UserProfile?.CompletedCoursesCount</span>
                </div>
                <div class="mt-3">
                    <div class="small mb-1 d-flex justify-content-between">
                        <span>Overall Progress</span>
                        <span>@Model.UserProfile?.OverallProgress%</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar" role="progressbar" style="width: @Model.UserProfile?.OverallProgress%" 
                             aria-valuenow="@Model.UserProfile?.OverallProgress" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-4 mb-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0">Personal Information</h4>
                    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                        <i class="bi bi-pencil me-1"></i> Edit Profile
                    </button>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">First Name</label>
                        <p class="fw-bold">@(Model.UserProfile?.FirstName ?? "-")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Last Name</label>
                        <p class="fw-bold">@(Model.UserProfile?.LastName ?? "-")</p>
                    </div>

                </div>
            </div>

            <div class="card shadow-sm border-0 p-4 mb-4">
                <h4 class="mb-4">Recent Learning</h4>
                @if (Model.UserProfile?.RecentCourses.Any() == true)
                {
                    <div class="row g-4">
                        @foreach (var course in Model.UserProfile.RecentCourses)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-none bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title mb-1">@course.Title</h6>
                                        <p class="small text-muted mb-2">@course.CategoryName</p>
                                        <div class="progress mb-2" style="height: 5px;">
                                            <div class="progress-bar bg-success" style="width: @course.Progress%"></div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="small">@course.Progress% Complete</span>
                                            <a asp-page="/Course/Learn" asp-route-id="@course.Id" class="btn btn-sm btn-white border">Resume</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        <a asp-page="/Course/MyCourses" class="text-primary text-decoration-none">View All My Courses <i class="bi bi-arrow-right small"></i></a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="h3 text-muted mb-3"><i class="bi bi-journal-text"></i></div>
                        <p class="text-muted">You haven't enrolled in any courses yet.</p>
                        <a asp-page="/Course/Browse" class="btn btn-primary">Browse Courses</a>
                    </div>
                }
            </div>

            <div class="card shadow-sm border-0 p-4 mb-4">
                <h4 class="mb-4">My Wishlist</h4>
                @if (Model.Wishlist.Any())
                {
                    <div class="row g-4">
                        @foreach (var course in Model.Wishlist)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-none bg-light">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">@course.Title</h6>
                                            <button class="btn btn-sm text-danger p-0" onclick="toggleWishlist('@course.Id', this)">
                                                <i class="bi bi-heart-fill"></i>
                                            </button>
                                        </div>
                                        <p class="small text-muted mb-2">@course.CategoryName</p>
                                        <div class="d-flex justify-content-between align-items-center mt-3">
                                            <span class="fw-bold text-primary">@course.FormattedPrice</span>
                                            <a asp-page="/Course/Details" asp-route-id="@course.Id" class="btn btn-sm btn-primary">Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted">Your wishlist is empty.</p>
                        <a asp-page="/Course/Browse" class="btn btn-sm btn-outline-primary">Explore Courses</a>
                    </div>
                }
            </div>

            <div class="card shadow-sm border-0 p-4">
                <h4 class="mb-4">Skills & Assessments</h4>
                @if (Model.UserProfile?.HasCompletedAssessment == true)
                {
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-3 h4 mb-0"></i>
                        <div>
                            <strong>Skill Assessment Completed!</strong><br>
                            Your recommendations are up to date based on your interests.
                        </div>
                        <a asp-page="/Assessment/Results" class="btn btn-sm btn-success ms-auto">View Results</a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-3 h4 mb-0"></i>
                        <div>
                            <strong>Want personlized results?</strong><br>
                            Take a quick assessment to get better course recommendations.
                        </div>
                        <a asp-page="/Assessment/Start" class="btn btn-sm btn-primary ms-auto">Start Now</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="UpdateProfile">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Avatar URL</label>
                        <input type="text" asp-for="UpdateRequest.AvatarUrl" class="form-control" placeholder="https://example.com/avatar.jpg">
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">First Name</label>
                            <input type="text" asp-for="UpdateRequest.FirstName" class="form-control">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Last Name</label>
                            <input type="text" asp-for="UpdateRequest.LastName" class="form-control">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function toggleWishlist(courseId, btn) {
            try {
                const response = await fetch(`/Course/Details/${courseId}?handler=ToggleWishlist`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ courseId: courseId })
                });

                const result = await response.json();
                if (result.success) {
                    // Refresh page to update wishlist view
                    location.reload();
                }
            } catch (error) {
                console.error('Error updating wishlist:', error);
            }
        }
    </script>
}
