@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.User.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <aside class="dash-sidebar clay-card">
        <div class="profile-card">
            <div class="profile-avatar"></div>
            <h3>@Model.UserName</h3>
            <p class="text-muted">Student</p>
        </div>

        <nav class="nav-menu">
            <a href="#" class="nav-item active">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Dashboard
            </a>
            <a href="#" class="nav-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                </svg>
                My Courses
            </a>
            <a href="#" class="nav-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polygon points="10 8 16 12 10 16 10 8"></polygon>
                </svg>
                Library
            </a>
            <a href="#" class="nav-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                Profile
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="dash-content">
        <!-- Hero Section -->
        <section class="dash-hero">
            <h1>Welcome back, @Model.UserName! ðŸ‘‹</h1>
            <p>You've learned for <strong>@Model.LearningStreak days</strong> in a row. Keep it up!</p>
        </section>

        <!-- Stats Overview -->
        <section class="stats-row">
            <div class="stat-card clay-card">
                <div class="stat-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>@Model.CompletedCourses</h3>
                    <p>Courses Competed</p>
                </div>
            </div>
            <div class="stat-card clay-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #F97316, #EA580C);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>@Model.TotalHours</h3>
                    <p>Hours Learned</p>
                </div>
            </div>
            <div class="stat-card clay-card">
                 <div class="stat-icon" style="background: linear-gradient(135deg, #8B5CF6, #7C3AED);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                         <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>@Model.LearningStreak</h3>
                    <p>Day Streak</p>
                </div>
            </div>
        </section>

        <!-- Continue Learning -->
        <section>
            <div class="section-header">
                <h2>Continue Learning</h2>
                <a href="#" class="btn-view-all">View My Courses &rarr;</a>
            </div>
            <div class="continue-grid">
                @foreach (var course in Model.EnrolledCourses)
                {
                    <div class="course-progress-card clay-card">
                        <span class="category-badge">@course.Category</span>
                        <img src="@course.ImageUrl" class="card-thumb" alt="@course.Title" />
                        <div class="card-body">
                            <h4 class="course-title">@course.Title</h4>
                            <div class="progress-container">
                                <div class="progress-info">
                                    <span>@course.CompletedLessons / @course.TotalLessons Lessons</span>
                                    <span>@course.Progress%</span>
                                </div>
                                <div class="progress-bar-bg">
                                    <div class="progress-bar-fill" style="width: @course.Progress%"></div>
                                </div>
                                <a href="#" class="btn-resume">Resume</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Recommended -->
        <section>
            <div class="section-header">
                <h2>Recommended for You</h2>
                <a href="#" class="btn-view-all">Browse Library &rarr;</a>
            </div>
            <div class="recommended-grid">
                @foreach (var course in Model.RecommendedCourses)
                {
                    <div class="rec-card clay-card">
                         <img src="@course.ImageUrl" class="card-thumb" style="height: 140px;" alt="@course.Title" />
                         <div class="card-body">
                             <span class="category-badge" style="font-size: 0.7rem; top: 0.75rem; left: 0.75rem;">@course.Category</span>
                             <h4 class="course-title" style="font-size: 1rem;">@course.Title</h4>
                             <div class="rating-pill">
                                 <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                                     <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                 </svg>
                                 @course.Rating
                             </div>
                             <div class="meta-row">
                                 <span class="student-count">
                                     <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                         <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                         <circle cx="9" cy="7" r="4"></circle>
                                         <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                         <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                     </svg>
                                     @course.Students
                                 </span>
                             </div>
                         </div>
                    </div>
                }
            </div>
        </section>
    </main>
</div>
