@page "{id:guid}"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Certificates.ViewModel
@{
    Layout = null; // Clean layout for certificate
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Certificate Of Completion - LearnHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Playfair+Display:wght@700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; font-family: 'Inter', sans-serif; }
        .cert-container { 
            width: 1000px; 
            margin: 50px auto; 
            background: white; 
            padding: 60px; 
            border: 20px solid #f1f3f5;
            box-shadow: 0 20px 50px rgba(0,0,0,0.1);
            position: relative;
            text-align: center;
        }
        .cert-border-inner {
            border: 2px solid #0d6efd;
            padding: 40px;
            height: 100%;
        }
        .cert-title { font-family: 'Playfair Display', serif; font-size: 3.5rem; color: #1a1e21; margin-bottom: 20px; }
        .cert-subtitle { text-transform: uppercase; letter-spacing: 5px; color: #6c757d; font-weight: 600; font-size: 0.9rem; margin-bottom: 40px; }
        .cert-recipient { font-family: 'Dancing Script', cursive; font-size: 4rem; color: #0d6efd; margin: 30px 0; }
        .cert-text { font-size: 1.2rem; line-height: 1.6; color: #495057; }
        .cert-course { font-weight: 700; color: #212529; font-size: 1.5rem; }
        .cert-footer { margin-top: 60px; display: flex; justify-content: space-between; align-items: flex-end; }
        .signature { border-top: 1px solid #dee2e6; width: 200px; padding-top: 10px; font-weight: 600; color: #6c757d; }
        .badge-seal { width: 120px; opacity: 0.8; }
        .cert-id { position: absolute; bottom: 30px; left: 50%; transform: translateX(-50%); font-size: 0.7rem; color: #adb5bd; }
    </style>
</head>
<body>
    <div class="cert-container">
        <div class="cert-border-inner">
            <div class="mb-4">
                <img src="https://img.icons8.com/isometric/100/graduation-cap.png" alt="Logo" width="60">
                <h5 class="fw-bold text-primary mt-2">LEARNHUB</h5>
            </div>

            <div class="cert-subtitle">Certificate of Completion</div>
            <div class="cert-text">This is to certify that</div>
            
            <div class="cert-recipient">@Model.Username</div>

            <div class="cert-text">
                has successfully completed all requirements for the course<br>
                <span class="cert-course">@Model.CourseTitle</span><br>
                issued on @Model.IssuedDate.ToString("MMMM dd, yyyy")
            </div>

            <div class="cert-footer">
                <div class="text-start">
                    <div class="signature">Course Instructor</div>
                    <p class="small text-muted mb-0">@Model.InstructorName</p>
                </div>
                <div>
                    <img src="https://img.icons8.com/fluency/100/guarantee.png" class="badge-seal" alt="Seal">
                </div>
                <div class="text-end">
                    <div class="signature">Platform Director</div>
                    <p class="small text-muted mb-0">LearnHub Academy</p>
                </div>
            </div>
        </div>
        <div class="cert-id">Verification ID: @Model.CertificateId.ToString().ToUpper() | Verify Code: @Model.VerificationCode</div>
    </div>
    
    <div class="text-center mb-5">
        <button class="btn btn-outline-dark rounded-pill px-4 me-2" onclick="window.print()">
            <i class="bi bi-printer me-2"></i>Print Certificate
        </button>
        <a href="javascript:history.back()" class="btn btn-link text-decoration-none text-muted">Back to Lessons</a>
    </div>
</body>
</html>
