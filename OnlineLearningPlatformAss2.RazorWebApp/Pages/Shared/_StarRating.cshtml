@model decimal

<div class="star-rating">
    @for (int i = 1; i <= 5; i++)
    {
        if (i <= Math.Floor(Model))
        {
            <i class="bi bi-star-fill text-warning"></i>
        }
        else if (i == Math.Ceiling(Model) && Model % 1 != 0)
        {
            <i class="bi bi-star-half text-warning"></i>
        }
        else
        {
            <i class="bi bi-star text-warning"></i>
        }
    }
    <span class="rating-number ms-1 text-muted">(@Model.ToString("F1"))</span>
</div>
