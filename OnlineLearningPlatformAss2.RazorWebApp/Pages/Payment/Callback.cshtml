@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Payment.CallbackModel
@{
    ViewData["Title"] = "Payment Result";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            @if (Model.Success)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="mb-3 text-success">Payment Successful!</h2>
                        <p class="lead mb-4">Thank you for your purchase. Your order has been completed successfully.</p>
                        
                        <div class="alert alert-light border mb-4 d-inline-block text-start">
                            <p class="mb-1"><strong>Item:</strong> @Model.ItemName</p>
                            <p class="mb-1"><strong>Order ID:</strong> @Model.OrderId</p>
                            <p class="mb-1"><strong>Transaction ID:</strong> @Model.TransactionId</p>
                            <p class="mb-1"><strong>Date:</strong> @Model.PaymentDate</p>
                            <hr class="my-2">
                            <p class="mb-0 fs-5 text-success"><strong>Amount:</strong> @string.Format("{0:N0} VND", Model.Amount)</p>
                        </div>

                        <div class="d-grid gap-2 col-md-6 mx-auto">
                            <a asp-page="/Course/MyCourses" class="btn btn-primary btn-lg">
                                <i class="bi bi-journal-bookmark me-2"></i>Go to My Courses
                            </a>
                            <a asp-page="/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-house me-2"></i>Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="mb-3 text-danger">Payment Failed</h2>
                        <p class="lead mb-4">We were unable to process your payment. Please try again.</p>
                        
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-danger mb-4">
                                @Model.Message
                            </div>
                        }

                        <div class="d-grid gap-2 col-md-6 mx-auto">
                            <a asp-page="/Order/Checkout" asp-route-id="@Model.OriginalId" asp-route-type="@Model.OriginalType" class="btn btn-primary btn-lg">
                                <i class="bi bi-arrow-repeat me-2"></i>Try Again
                            </a>
                            <a asp-page="/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-house me-2"></i>Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
