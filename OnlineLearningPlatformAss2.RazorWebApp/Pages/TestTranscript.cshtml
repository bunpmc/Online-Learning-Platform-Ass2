@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.TestTranscriptModel
@{
    ViewData["Title"] = "Test Transcript";
}

<h1>Test Transcript Generation</h1>

<form method="post">
    <div class="form-group">
        <label for="videoUrl">Video URL</label>
        <input type="text" class="form-control" id="videoUrl" name="videoUrl" required />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="summarize" name="summarize" value="true" checked />
        <label class="form-check-label" for="summarize">Summarize?</label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Generate</button>
</form>

@if (!string.IsNullOrEmpty(Model.Transcript))
{
    <div class="mt-4">
        <h3>Result:</h3>
        <pre style="white-space: pre-wrap; background-color: #f8f9fa; padding: 15px; border-radius: 5px;">@Model.Transcript</pre>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-4">
        @Model.ErrorMessage
    </div>
}
