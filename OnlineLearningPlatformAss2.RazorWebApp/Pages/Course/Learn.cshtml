@page "/Course/Learn/{id:guid}"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Course.LearnModel

@{
    ViewData["Title"] = Model.CourseLearn?.CourseTitle ?? "Course Learning";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnHub</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/course-learn.css" asp-append-version="true" />
</head>

<body>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger m-3">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.CourseLearn != null)
    {
        <div class="learning-container">
            <div class="sidebar">
                <div class="course-header">
                    <h1 class="course-title">@Model.CourseLearn.CourseTitle</h1>
                    <div class="progress-info">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-white-50 small" id="progressText">@Model.CourseLearn.Progress% complete</span>
                        </div>
                        <div class="progress" style="height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px;">
                            <div id="courseProgressBar" class="progress-bar bg-primary" role="progressbar" style="width: @Model.CourseLearn.Progress%" aria-valuenow="@Model.CourseLearn.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>

                <div class="search-lessons">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text border-0 bg-transparent text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" id="lessonSearch" class="form-control" placeholder="Search lessons..." oninput="filterLessons()">
                    </div>
                </div>

                <div class="modules-list">
                    @for (int i = 0; i < Model.CourseLearn.Modules.Count; i++)
                    {
                        var module = Model.CourseLearn.Modules[i];
                        <div class="module-item">
                            <button class="module-header" type="button" data-bs-toggle="collapse" 
                                    data-bs-target="#module-@i" aria-expanded="@(i == 0 ? "true" : "false")">
                                <div>
                                    <h3 class="module-title">@module.Title</h3>
                                    <div class="module-meta">@module.Lessons.Count lessons â€¢ @module.FormattedDuration</div>
                                </div>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            
                            <div class="collapse @(i == 0 ? "show" : "")" id="module-@i">
                                <div class="lessons-list">
                                    @foreach (var lesson in module.Lessons)
                                    {
                                        <div class="lesson-item @(lesson.IsCurrent ? "current" : "") @(lesson.IsCompleted ? "completed" : "")" id="lesson-@lesson.Id" onclick="selectLesson('@lesson.Id', '@JavaScriptEncoder.Default.Encode(lesson.Title)', '@lesson.VideoUrl', '@JavaScriptEncoder.Default.Encode(lesson.Content)')">
                                            <div class="lesson-title-section">
                                                <div class="lesson-icon @(lesson.IsCompleted ? "completed" : lesson.IsCurrent ? "current" : "pending")">
                                                    @if (lesson.IsCompleted)
                                                    {
                                                        <i class="bi bi-check"></i>
                                                    }
                                                    else if (lesson.IsCurrent)
                                                    {
                                                        <i class="bi bi-play-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <span>@lesson.OrderIndex</span>
                                                    }
                                                </div>
                                                <h4 class="lesson-title">@lesson.Title</h4>
                                            </div>
                                            <div class="lesson-duration">@lesson.FormattedDuration</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="navigation-controls">
                    <a href="javascript:history.back()" class="back-btn">
                        <i class="bi bi-arrow-left"></i>
                        Back to Course
                    </a>
                </div>
            </div>

            <div class="content-area">
                <div class="video-container" id="videoContainer">
                    @if (!string.IsNullOrEmpty(Model.CourseLearn.CurrentLesson?.VideoUrl))
                    {
                        <iframe class="video-player" src="@Model.CourseLearn.CurrentLesson.VideoUrl" frameborder="0" allowfullscreen></iframe>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center h-100 text-white">
                            <div class="text-center">
                                <i class="bi bi-play-circle mb-3" style="font-size: 4rem;"></i>
                                <h3>No Video Available</h3>
                                <p>This lesson contains text content only.</p>
                            </div>
                        </div>
                    }
                </div>

                <div class="lesson-info">
                    @if (Model.CourseLearn.CurrentLesson != null)
                    {
                        <h2 class="mb-3" id="lessonTitle">@Model.CourseLearn.CurrentLesson.Title</h2>
                        <div class="lesson-content">
                            <p class="lesson-description" id="lessonDescription">@Model.CourseLearn.CurrentLesson.Content</p>
                        </div>
                        <div class="lesson-actions">
                            <button class="btn btn-success" id="markCompleteBtn" onclick="markAsCompleted()">
                                <i class="bi bi-check-circle me-2"></i>
                                Mark as Complete
                            </button>
                            <a href="/Certificates/View?id=@Model.CourseLearn.EnrollmentId" id="certificateBtn" class="btn btn-primary @(Model.CourseLearn.Progress < 100 ? "d-none" : "")" target="_blank">
                                <i class="bi bi-patch-check me-2"></i>
                                View Certificate
                            </a>
                        </div>

                        <div id="quizSection" class="mt-5 d-none">
                            <div class="card border-0 shadow-sm p-4">
                                <div id="quizContent"></div>
                                <div id="quizResult" class="mt-4 d-none"></div>
                            </div>
                        </div>

                        <div class="discussion-section mt-5 border-top pt-5">
                            <h4 class="fw-bold mb-4">Questions & Answers</h4>
                            <div class="card border-0 bg-light p-4 mb-4 rounded-3">
                                <h6 class="fw-bold mb-3">Ask a question</h6>
                                <div class="mb-3">
                                    <textarea id="commentInput" class="form-control border-0 shadow-sm" rows="3" placeholder="What's on your mind?"></textarea>
                                </div>
                                <div class="text-end">
                                    <button class="btn btn-primary rounded-pill px-4" id="postCommentBtn" onclick="submitComment()">Post Question</button>
                                </div>
                            </div>
                            <div id="commentsList" class="mt-4">
                                <div class="text-center py-5 text-muted">
                                    <div class="spinner-border spinner-border-sm mb-3"></div>
                                    <p>Loading discussions...</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Review Modal -->
        <div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header bg-primary text-white border-0">
                        <h5 class="modal-title fw-bold">Congratulations!</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4 text-center">
                        <div class="mb-4">
                            <i class="bi bi-trophy text-warning" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 fw-bold">Course Completed!</h4>
                            <p class="text-muted">Would you like to share your experience with others?</p>
                        </div>
                        <div class="rating-input mb-4">
                            <div class="star-rating h2 text-warning">
                                <i class="bi bi-star rating-star" data-rating="1"></i>
                                <i class="bi bi-star rating-star" data-rating="2"></i>
                                <i class="bi bi-star rating-star" data-rating="3"></i>
                                <i class="bi bi-star rating-star" data-rating="4"></i>
                                <i class="bi bi-star rating-star" data-rating="5"></i>
                            </div>
                            <input type="hidden" id="selectedRating" value="0">
                        </div>
                        <div class="mb-3 text-start">
                            <label class="form-label fw-bold">Your Review (Optional)</label>
                            <textarea id="reviewComment" class="form-control" rows="3"></textarea>
                        </div>
                        <button class="btn btn-primary w-100 rounded-pill py-2 fw-bold" onclick="submitReview()">Submit Review & View Certificate</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid d-flex align-items-center justify-content-center" style="height: 100vh;">
            <div class="text-center">
                <h2>Course Not Found</h2>
                <p>The course you're trying to access could not be loaded.</p>
                <a asp-page="/Course/MyCourses" class="btn btn-primary">Back to My Courses</a>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentCourseId = '@(Model.CourseLearn?.CourseId)';
        let currentLessonId = '@(Model.CourseLearn?.CurrentLessonId)';
        let hasReviewed = @(Model.HasReviewed ? "true" : "false");

        async function selectLesson(lessonId, lessonTitle, videoUrl, description) {
            currentLessonId = lessonId;
            document.getElementById('lessonTitle').textContent = lessonTitle;
            document.getElementById('lessonDescription').textContent = description;
            
            const videoContainer = document.getElementById('videoContainer');
            if (videoUrl && videoUrl !== 'null' && videoUrl !== '') {
                videoContainer.innerHTML = `<iframe class="video-player" src="${videoUrl}" frameborder="0" allowfullscreen></iframe>`;
            } else {
                videoContainer.innerHTML = `<div class="d-flex align-items-center justify-content-center h-100 text-white text-center"><div><i class="bi bi-play-circle mb-3" style="font-size: 4rem;"></i><h3>No Video Available</h3></div></div>`;
            }
            
            document.querySelectorAll('.lesson-item').forEach(item => item.classList.remove('current'));
            const selectedItem = document.getElementById('lesson-' + lessonId);
            if (selectedItem) {
                selectedItem.classList.add('current');
                // Ensure the module is expanded
                const moduleContent = selectedItem.closest('.collapse');
                if (moduleContent && !moduleContent.classList.contains('show')) {
                    new bootstrap.Collapse(moduleContent).show();
                }
            }
            
            loadComments();
        }

        function filterLessons() {
            const term = document.getElementById('lessonSearch').value.toLowerCase();
            const lessons = document.querySelectorAll('.lesson-item');
            const modules = document.querySelectorAll('.module-item');

            lessons.forEach(lesson => {
                const title = lesson.querySelector('.lesson-title').textContent.toLowerCase();
                const isMatch = title.includes(term);
                lesson.style.display = isMatch ? 'flex' : 'none';
            });

            modules.forEach(module => {
                const hasVisibleLessons = Array.from(module.querySelectorAll('.lesson-item')).some(l => l.style.display !== 'none');
                module.style.display = hasVisibleLessons || term === '' ? 'block' : 'none';
                if (term !== '' && hasVisibleLessons) {
                    const collapse = module.querySelector('.collapse');
                    if (collapse && !collapse.classList.contains('show')) {
                        new bootstrap.Collapse(collapse).show();
                    }
                }
            });
        }

        async function markAsCompleted() {
            const btn = document.getElementById('markCompleteBtn');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Marking...';
            
            try {
                const response = await fetch('?handler=CompleteLesson', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ courseId: currentCourseId, lessonId: currentLessonId })
                });

                const result = await response.json();
                if (result.success) {
                    const lessonItem = document.getElementById('lesson-' + currentLessonId);
                    if (lessonItem) {
                        lessonItem.classList.add('completed');
                        const icon = lessonItem.querySelector('.lesson-icon');
                        icon.className = 'lesson-icon completed';
                        icon.innerHTML = '<i class="bi bi-check"></i>';
                    }

                    const progressBar = document.getElementById('courseProgressBar');
                    if (progressBar) {
                        progressBar.style.width = result.progress + '%';
                        document.getElementById('progressText').textContent = result.progress + '% complete';
                    }

                    if (result.isCourseCompleted) {
                        document.getElementById('certificateBtn').classList.remove('d-none');
                        if (!hasReviewed) {
                            new bootstrap.Modal(document.getElementById('reviewModal')).show();
                        }
                    } else {
                        // Auto-play Next Logic
                        const lessons = Array.from(document.querySelectorAll('.lesson-item'));
                        const currentIndex = lessons.findIndex(l => l.id === 'lesson-' + currentLessonId);
                        if (currentIndex !== -1 && currentIndex < lessons.length - 1) {
                            const nextLesson = lessons[currentIndex + 1];
                            setTimeout(() => {
                                nextLesson.click();
                                // Scroller feedback
                                nextLesson.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                            }, 1500);
                        }
                    }
                } else if (result.message) {
                    alert(result.message);
                }
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        async function submitReview() {
            const rating = document.getElementById('selectedRating').value;
            const comment = document.getElementById('reviewComment').value;

            if (rating == 0) {
                alert('Please select a rating');
                return;
            }

            const response = await fetch('?handler=SubmitReview', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ courseId: currentCourseId, rating: parseInt(rating), comment: comment })
            });

            const result = await response.json();
            if (result.success) {
                hasReviewed = true;
                bootstrap.Modal.getInstance(document.getElementById('reviewModal')).hide();
                window.open(document.getElementById('certificateBtn').href, '_blank');
            }
        }

        // Star Interactions
        document.querySelectorAll('.rating-star').forEach(star => {
            star.onclick = function() {
                const r = this.dataset.rating;
                document.getElementById('selectedRating').value = r;
                document.querySelectorAll('.rating-star').forEach(s => {
                    s.classList.toggle('bi-star-fill', s.dataset.rating <= r);
                    s.classList.toggle('bi-star', s.dataset.rating > r);
                });
            };
        });

        async function loadComments() {
            const list = document.getElementById('commentsList');
            const response = await fetch(`?handler=Comments&lessonId=${currentLessonId}`);
            const comments = await response.json();
            
            if (!comments.length) {
                list.innerHTML = '<p class="text-center text-muted py-3">No questions yet. Be the first to ask!</p>';
                return;
            }

            function renderComment(c, isReply = false) {
                return `
                    <div class="comment-item ${isReply ? 'ms-5 border-start ps-3 mt-3' : 'mb-4 border-bottom pb-3'}">
                        <div class="d-flex justify-content-between mb-1">
                            <div>
                                <strong class="me-2">${c.username}</strong>
                                ${c.isInstructor ? '<span class="badge bg-primary rounded-pill smaller">Instructor</span>' : ''}
                            </div>
                            <span class="text-muted smaller">${new Date(c.createdAt).toLocaleDateString()}</span>
                        </div>
                        <div class="comment-text">${c.content}</div>
                        ${c.replies && c.replies.length ? c.replies.map(r => renderComment(r, true)).join('') : ''}
                    </div>
                `;
            }

            list.innerHTML = comments.map(c => renderComment(c)).join('');
        }

        loadComments();
    </script>

    <style>
        /* Shared minor utilities if any, otherwise keep it empty or remove. 
           Star rating interaction is usually better in CSS file but keep it if simple. */
        .star-rating i { cursor: pointer; }
    </style>
</body>
</html>
