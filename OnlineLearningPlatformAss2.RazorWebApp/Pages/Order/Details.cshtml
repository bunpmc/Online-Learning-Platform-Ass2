@page "/Order/Details/{id:guid}"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Order.DetailsModel
@{
    ViewData["Title"] = "Order Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/my-orders.css" asp-append-version="true" />
}

<div class="container py-4">
    <!-- Back Navigation -->
    <div class="row mb-4">
        <div class="col">
            <a asp-page="/Order/MyOrders" class="text-decoration-none text-muted">
                <i class="bi bi-arrow-left me-1"></i> Back to Orders
            </a>
        </div>
    </div>

    @if (Model.Order != null)
    {
        <!-- Order Header -->
        <div class="row mb-4">
            <div class="col">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h1 class="h3 fw-bold mb-2">Order #@Model.Order.Id.ToString()[..8]</h1>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        @Model.Order.FormattedDate
                                    </span>
                                    <span class="@Model.Order.StatusBadgeClass">@Model.Order.Status</span>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="h3 fw-bold text-primary mb-0">@Model.Order.FormattedAmount</div>
                                @if (Model.Order.CompletedAt.HasValue)
                                {
                                    <small class="text-muted">
                                        Completed: @Model.Order.CompletedAt.Value.ToString("MMM dd, yyyy")
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-box-seam me-2"></i>Order Items
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Order.Items.Any())
                        {
                            @foreach (var item in Model.Order.Items)
                            {
                                <div class="d-flex align-items-center p-3 bg-light rounded mb-3">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Title" class="rounded me-3" style="width: 64px; height: 64px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-primary bg-opacity-10 rounded me-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                                            <i class="bi bi-@(item.Type == "Course" ? "book" : "signpost-split") text-primary fs-4"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="fw-bold mb-1">@item.Title</h6>
                                        <span class="badge bg-secondary">@item.Type</span>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">@item.FormattedPrice</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="bi bi-box mb-2 fs-1"></i>
                                <p>No items found for this order.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-receipt me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <span>@Model.Order.FormattedAmount</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tax:</span>
                            <span>$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold h5">
                            <span>Total:</span>
                            <span class="text-primary">@Model.Order.FormattedAmount</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transaction History -->
        @if (Model.Order.Transactions.Any())
        {
            <div class="row">
                <div class="col">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-credit-card me-2"></i>Payment History
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Transaction ID</th>
                                            <th>Date</th>
                                            <th>Method</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var transaction in Model.Order.Transactions)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="text-monospace small">#@transaction.Id.ToString()[..8]</span>
                                                </td>
                                                <td>@transaction.FormattedDate</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(transaction.PaymentMethod))
                                                    {
                                                        <span class="badge bg-light text-dark">@transaction.PaymentMethod</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="fw-bold">@transaction.FormattedAmount</td>
                                                <td>
                                                    <span class="@transaction.StatusBadgeClass">@transaction.Status</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="bi bi-exclamation-circle text-muted mb-3"></i>
                <h5>Order Not Found</h5>
                <p class="text-muted mb-4">The requested order could not be found.</p>
                <a asp-page="/Order/MyOrders" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>Back to Orders
                </a>
            </div>
        </div>
    }
</div>
