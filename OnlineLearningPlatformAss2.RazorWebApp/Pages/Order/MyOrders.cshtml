@page "/Order/MyOrders"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Order.MyOrdersModel
@{
    ViewData["Title"] = "My Orders";
}

@section Styles {
    <link rel="stylesheet" href="~/css/my-orders.css" asp-append-version="true" />
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h3 fw-bold mb-2">My Orders</h1>
                    <p class="text-muted mb-0">Manage your course and learning path purchases</p>
                </div>
                <a asp-page="/Index" class="btn btn-outline-primary">
                    <i class="bi bi-plus me-1"></i> Browse Courses
                </a>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Order Statistics -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary">
                        <i class="bi bi-bag-check"></i>
                    </div>
                    <div class="ms-3">
                        <div class="stat-value">@Model.Stats.TotalOrders</div>
                        <div class="stat-label">Total Orders</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-success">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="ms-3">
                        <div class="stat-value">@Model.Stats.FormattedTotalSpent</div>
                        <div class="stat-label">Total Spent</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-info">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="ms-3">
                        <div class="stat-value">@Model.Stats.CompletedOrders</div>
                        <div class="stat-label">Completed</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-warning">
                        <i class="bi bi-clock"></i>
                    </div>
                    <div class="ms-3">
                        <div class="stat-value">@Model.Stats.PendingOrders</div>
                        <div class="stat-label">Pending</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders List -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>Order History
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>
                                        <span class="text-monospace small">#@order.Id.ToString()[..8]</span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@order.FormattedDate</span>
                                            @if (order.CompletedAt.HasValue)
                                            {
                                                <small class="text-muted">Completed: @order.CompletedAt.Value.ToString("MMM dd, yyyy")</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">@order.FormattedAmount</span>
                                    </td>
                                    <td>
                                        <span class="@order.StatusBadgeClass">@order.Status</span>
                                    </td>
                                    <td>
                                        <a href="/Order/Details/@order.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="bi bi-bag text-muted mb-3"></i>
                        <h5>No Orders Found</h5>
                        <p class="text-muted mb-4">You haven't made any purchases yet.</p>
                        <a asp-page="/Index" class="btn btn-primary">
                            <i class="bi bi-plus me-1"></i>Browse Courses
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
